<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Permisos para notificaciones -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.USE_EXACT_ALARM" />
    
    <!-- Permisos para alarmas -->
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.USE_FULL_SCREEN_INTENT" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.Material.Light.NoActionBar">
        <activity
            android:exported="true"
            android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Receptor para notificaciones programadas -->
        <receiver
            android:name="cl.jlopezr.multiplatform.core.notification.NotificationReceiver"
            android:enabled="true"
            android:exported="false" />
            
        <!-- Receptor para alarmas -->
        <receiver
            android:name="cl.jlopezr.multiplatform.core.alarm.AlarmReceiver"
            android:enabled="true"
            android:exported="false" />
            
        <!-- Receiver para completado automático de tareas -->
        <receiver
            android:name="cl.jlopezr.multiplatform.core.alarm.TaskCompletionReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="cl.jlopezr.multiplatform.COMPLETE_TASK" />
            </intent-filter>
        </receiver>
        
        <!-- Receiver para apagar alarma y ver tarea -->
        <receiver
            android:name="cl.jlopezr.multiplatform.core.alarm.DismissAndViewTaskReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="cl.jlopezr.multiplatform.DISMISS_AND_VIEW_TASK" />
            </intent-filter>
        </receiver>
        
        <!-- Receiver para acciones de tarea (completar/actualizar) -->
        <receiver
            android:name="cl.jlopezr.multiplatform.core.alarm.TaskActionReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="cl.jlopezr.multiplatform.COMPLETE_TASK_ACTION" />
                <action android:name="cl.jlopezr.multiplatform.UPDATE_TASK_ACTION" />
            </intent-filter>
        </receiver>
            
        <!-- Servicio de alarma -->
        <service
            android:name="cl.jlopezr.multiplatform.core.alarm.AlarmService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="mediaPlayback" />
            
        <!-- Actividad de alarma -->
        <activity
            android:name="cl.jlopezr.multiplatform.core.alarm.AlarmActivity"
            android:enabled="true"
            android:exported="false"
            android:showOnLockScreen="true"
            android:turnScreenOn="true"
            android:theme="@android:style/Theme.DeviceDefault.NoActionBar.Fullscreen" />
            
        <!-- Receptor para sesión expirada -->
        <receiver
            android:name="cl.jlopezr.multiplatform.core.session.SessionExpiredReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="cl.jlopezr.multiplatform.SESSION_EXPIRED" />
            </intent-filter>
        </receiver>
    </application>

</manifest>